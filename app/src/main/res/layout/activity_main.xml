<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:background="@color/purple"
       android:gravity="center|start">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/str_top"
          android:layout_marginStart="10dp"
          android:textSize="40sp"
          android:textColor="@color/white"/>

   </LinearLayout>


   <EditText
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:id="@+id/et_email"
       android:gravity="center"
       android:layout_marginTop="60dp"
       android:background="@drawable/bg_edittext"
       android:hint="@string/et_email"
       android:textSize="20sp"
       android:textColor="@color/black"
       android:paddingStart="10dp"
       android:drawableLeft="@drawable/ic_email"
       android:drawableTint="@color/gray"
       />

   <EditText
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:id="@+id/et_subject"
       android:gravity="center"
       android:layout_marginTop="10dp"
       android:background="@drawable/bg_edittext"
       android:hint="@string/et_subject"
       android:textSize="20sp"
       android:textColor="@color/black"
       android:paddingStart="10dp"
       android:drawableLeft="@drawable/ic_notes"
       android:drawableTint="@color/gray"
       />
   <EditText
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:id="@+id/et_massage"
       android:gravity="center"
       android:layout_marginTop="10dp"
       android:background="@drawable/bg_et_massage"
       android:hint="@string/et_massage"
       android:textSize="20sp"
       android:textColor="@color/black"
       android:paddingStart="10dp"
       android:drawableLeft="@drawable/ic_massage"
       android:drawableTint="@color/gray"
       />

   <com.google.android.material.button.MaterialButton
       android:layout_width="350dp"
       android:layout_height="70dp"
       android:id="@+id/btn_send"
       android:backgroundTint="@color/purple"
       android:layout_marginTop="100dp"
       android:text="@string/btn_text"
       android:textSize="20sp"/>





</LinearLayout>